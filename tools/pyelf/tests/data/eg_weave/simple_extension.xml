<?xml version="1.0"?>
<!DOCTYPE image SYSTEM "weaver-2.0.dtd">
<image>
	<machine>
		<cpu name="xscale" />
		<word_size size="0x20" />
		<virtual_memory name="virtual">
			<region base="0x1000" size="0xcffff000" />
		</virtual_memory>
		<physical_memory name="physical">
			<region base="0xa0000000" size="0x3800000" />
		</physical_memory>
		<page_size size="4K" />
	</machine>
	<virtual_pool name="virtual">
		<memory base="0x1000" size="0xcffff000"/>
	</virtual_pool>

	<physical_pool name="physical">
		<memory src="physical" />
	</physical_pool>

	<kernel file="data/eg_weave/l4kernel" virtpool="virtual" physpool="physical">
	</kernel>

	<iguana name="iguana_server" file="data/eg_weave/ig_server" pager="default" direct="false" kernel_heap="2M">
		<extension name="extn" direct="false" physpool="physical" pager="memload" file="data/eg_weave/ig_naming" />
		<extension name="extn1" start="objtable_lookup" />
	</iguana>
</image>
